.container {
  height: 80%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
.cell{
    margin: 30rpx 0;
    background-color: white;
    height: 92rpx;
    border: 1rpx  solid #bcbcbc;
    border-left: 0;
    border-right: 0;
}

.cell image{
    display: inline-block;
    width: 70rpx;
    height: 100%;
    margin-left: 20rpx;
    vertical-align: middle;
}
.cell text{
    font-size: 31rpx;
    color: #666666;
    margin-left: 20rpx;
    line-height: 92rpx;
    display: inline-block;
    height: 100%;
}

.right_arrow{
    float: right;
    margin-right: 20rpx;
}

.menu_item{
    background-color: white;
    display: inline-block;
    width: 24.2%;
    height: 200rpx;
    border-bottom: 1rpx solid #f1f0f0;
    border-left: 1rpx solid #f1f0f0;
    padding: 2.33rpx;
}
.menu_item image{
    height: 55%;
    width: 150rpx;
    display: block;
    margin: 20rpx auto;
}
.menu_item text{
    display: block;
    color: #666666;
    font-size: 31rpx;
    text-align: center;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 150px;
}

.modal {
    position: fixed;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    background: rgba(0, 0, 0, .5);
    z-index: 99999;
    opacity: 0;
    transition: opacity 400ms ease-in;
    pointer-events: none;
    display: flex;
    justify-content: center;
    align-items: center;
}
.modal .dialog {
    width: 84%;
    height: 28%;
    background-color: #eceff4;
    border-radius: 4px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}
.dialog .modal-item {
    height: 33.3%;
    width: 100%;
}
.modal-button {
    height: 100rpx;
    margin-bottom: 0;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}
.modal-button view {
    width: 50%;
    border-top: 2rpx solid #E5E7ED;
    display: flex;
    justify-content: center;
    align-items: center;
}