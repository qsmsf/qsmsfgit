/**index.wxss**/
@import "../common/mainTabCell.wxss";

/*top tab*/
.top-tab{
  height:36px;
  width: 750rpx;
  border-top: 1rpx solid #dddcdc;
  color: #7b7b7b;
  font-size: 15px;
  background-color: #f7f7f7;
  z-index: 9999;
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-around;
  align-items: stretch;
  position: fixed;
  top: 0;
}
.top-tab .top-tab-item{
  /*display: inline-block;*/
  /*width: 16%;*/
  flex-grow: 1;
  height: 35px;
  line-height: 35px;
  text-align: center;
}
.top-tab-item.active {
  border-bottom:2px solid red;
  color: red;
}

.swiper{
  display: block; 
  width: 100%; 
  overflow: hidden;
  margin: 0;
  border: 0;
  margin-top: 37px;
  background-color: #eaeaea;
}


.scrollView{
  height: 100%;
  background-color: #eaeaea;
}

.themeBtn {
  position: fixed;
  right: 20px;
  bottom:20px;
  width: 80px;
  height: 80px;
  border-radius: 50%;
  background:#f7f7f7 url(https://www.langkunkeji.com/imgs/index/newRecord.png) no-repeat center center;
  background-size: 80px 80px;
  box-shadow:0px 0px 5px #eee;
}

.modal {
    position: fixed;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    background: rgba(0, 0, 0, .5);
    z-index: 99999;
    opacity: 0;
    transition: opacity 400ms ease-in;
    pointer-events: none;
    display: flex;
    justify-content: center;
    align-items: center;
}
.modal .dialog {
    width: 84%;
    height: 28%;
    background-color: #eceff4;
    border-radius: 4px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}
.dialog .modal-item {
    height: 33.3%;
    width: 100%;
}
.modal-button {
    height: 100rpx;
    margin-bottom: 0;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}
.modal-button view {
    width: 50%;
    border-top: 2rpx solid #E5E7ED;
    display: flex;
    justify-content: center;
    align-items: center;
}
