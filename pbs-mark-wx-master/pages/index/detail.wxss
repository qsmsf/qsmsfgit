@import "commentCell.wxss";
@import "../common/lib/weui.wxss";

Page{
    background-color: white;
}
.top-tab{
  height:36px;
  width: 750rpx;
  border-top: 1rpx solid #dddcdc;
  color: #7b7b7b;
  font-size: 15px;
  background-color: #f7f7f7;
  z-index: 9999;
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-around;
  align-items: stretch;
  position: fixed;
  top: 0;
}
.top-tab .top-tab-item{
  /*display: inline-block;*/
  /*width: 16%;*/
  flex-grow: 1;
  height: 35px;
  line-height: 35px;
  text-align: center;
}
.top-tab-item.active {
  border-bottom:2px solid red;
  color: red;
}

.swiper{
  display: block; 
  width: 100%; 
  overflow: hidden;
  margin: 0;
  border: 0;
  margin-top: 37px;
  background-color: #eaeaea;
}


.scrollView{
  height: 100%;
  background-color: #eaeaea;
}
/*分隔线*/
.divide_view{
    height: 20rpx;
    background-color: #f2f2f2;
}
.comment_text{
    display:block;
    height:68rpx;
    font-size:26rpx;
    color:#888888;
    line-height:68rpx;
    margin-left: 15rpx;
}
.mainTabCell{
  background-color: white;
  margin: 12rpx 12rpx 10rpx 12rpx;
  border: 1rpx solid #dddcdc;
}

/*头像*/
.avator{
  display: inline-block;
  vertical-align: middle;
  width:56rpx;
  height: 56rpx;
  margin-left: 14rpx;
  margin-top: 14rpx;
  
}
.title-time{
  flex-direction: column;
  display: inline-block;
  margin-left: 14rpx;
  margin-top: 12rpx;
  vertical-align: middle;
  padding: 0;
  color: #454545;
}
/*标题*/
.title{
  display: block;
  font-size: 24rpx;
  margin-bottom: 10rpx;
}
.time{
  display: block;
  font-size: 15rpx;
}
.morebtnnormal{
  width: 79rpx;
  height: 79rpx;
  float: right;
}

/*内容*/
.content{
  margin: 20rpx 14rpx;
}
.content-text{
  display: block;
  font-size: 30rpx;
  line-height: 40rpx;
  margin-bottom: 14rpx;
  color: #333333;
}
.content-multimedia{
  text-align:center;
  margin:0 auto;
  overflow: hidden;
}
/*图片*/
.content-multimedia image{
  display: inline-block;
  max-width:100%;
  height: auto;
}
/*视频*/
.content-multimedia video{
  display: inline-block;
  max-width:100%;
  height: auto;
  min-width: 70%;
}
.content-multimedia audio{
  display: inline-block;
  width: 100%;
}

/*底部工具条*/
.bottom{
  height: 85rpx;
  border-top: 1rpx solid #f8f7f7;
  overflow: hidden;
}
.bottom-item {
  display: inline-block;
  width: 25%;
  height: 100%;
  vertical-align: text-bottom;
  text-align: center;
  overflow: hidden;
}
.bottom-item-content{
  display: inline-block;
  height: 100%;
  color: #909090;
}

.bottom-item-content image{
  width: 45rpx;
  height: 100%;
  vertical-align: middle;
  margin-right: 10rpx;
}
.bottom-item-content text {
  font-size: 23rpx;
  vertical-align: middle;
  margin-top: 10rpx;
  display: inline-block;
}

.cai image{
  margin-top: 5rpx;
}

/*分割线*/
.cut-line{
  height: 80%;
  width: 2rpx;
  background-color: #dddcdc;
  float: right;
  margin-top: 5%;
  margin-right: 3rpx;
}

.input-box{
  background-color: #fff;
  width: 100%;
  height: 500px;
  display: block;
  border-radius: 5px;
  
  background-size: cover;
  padding: 20px;
  box-sizing: border-box;
}
.input-box textarea{
  width: 100%;
  margin-top: 100rpx;
  font-size: 28rpx;
}
.saveButton {
  width: 30px;
  height: 30px;
  
  background-size: cover;
  position: absolute;
  top: 10px;
  right: 10px;
}
.date{
  position: absolute;
  top: 10px;
  left: 10px;
  width: 90px;
  height: 40px;
  line-height: 40px;
  border: 1px solid #ffa0c1;
  border-radius: 5px;
  font-size: 12px;
  color: #666;
  background: #fff;
  opacity: .8;
  text-align: left;
}
.date:after{
  position: relative;
  left: 75px;
  top:-42px;
  content: '';
  display:inline-block;
  width: 6px;
  height: 6px;
  border-width: 3px 3px 0 0;
  border-color: #ffa0c1;
  border-style: solid;
  transform: rotate(135deg);
}

.location{
  position: fixed;
  bottom: 70px;
  left: 10px;
  width: 100px;
  height: 30px;
  line-height: 30px;
  border-radius: 15px;
  border: 1px solid #ddd;
  font-size: 12px;
  padding-left:20px;
  box-sizing: border-box;
  background-color: #fff;
  
  background-position: left;
  background-repeat: no-repeat;
  background-size: 20px 20px;
}

.picker{
  padding: 19rpx 26rpx;
  background-color: #FFFFFF;
}

.display-container {
  align-items: center;
  justify-content: center;
  /*border: 1px solid grey;*/
  margin: 10px;
  text-align: center;
}

.clock {
  font-size: 3.4em;
  font-weight: 500;
  /*color: #006df0;*/
  align-self: center;
}