@model FineUIMvc.QuickStart.Models.sys_unit

@{
    ViewBag.Title = "Edit";
    var F = @Html.F();
}

@section body {

    @(F.Panel()
        .ID("Panel1")
        .ShowBorder(false)
        .ShowHeader(false)
        .BodyPadding(10)
        .AutoScroll(true)
        .IsViewPort(true)
        .Toolbars(
            F.Toolbar()
                .Items(
                    F.Button()
                        .Icon(Icon.SystemClose)
                        .Text("关闭")
                        .Listener("click", "F.activeWindow.hide();"),
                    F.ToolbarSeparator(),
                    F.Button()
                        .ValidateForms("SimpleForm1")
                        .Icon(Icon.SystemSaveClose)
                        .OnClick(Url.Action("btnEdit_Click"), "SimpleForm1")
                        .Text("保存后关闭")
                )
        )
        .Items(
            F.SimpleForm()
                .ID("SimpleForm1")
                .ShowBorder(false)
                .ShowHeader(false)
                .Items(
                    F.HiddenFieldFor(m => m.unit_id),
                    F.TextBoxFor(m => m.unit_name),                    
                    F.RadioButtonListFor(m => m.is_top)
                    .Items(
                        F.RadioItem()
                            .Text("顶层单位")
                            .Value("1")
                            .Selected(true),
                        F.RadioItem()
                            .Text("下级单位")
                            .Value("0")
                    ),
                    F.DropDownListFor(m => m.father_unit_id)
                                    .Items(ViewBag.UnitList)
                )
        )
    )

}